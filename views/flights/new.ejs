<%- include('../partials/header')%>

<body>
  <h2>Input Your Flight</h2>
  <form action="/flights" class = 'flight-select' method="POST">
    <label id = "airport">Airport:
      <select name="airport">
        <option value="SAN">San Diego</option>
        <option value="AUS">Austin</option>
        <option value="LAX">Los Angeles</option>
        <option value="SEA">Seattle</option>
        <option value="DAL">Dallas</option>
      </select>
    </label>
    <label id = "airline">Airline:
      <select name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
    </label><br>
    <label  id = "flightNo">Flight Number:
      <input type="text" name="flightNo">
    </label><br>
    <label id = "departs">Departure Date
      <input type="datetime-local" name="departs">
    </label><br>
    <label id = "submit-flight"><input type="submit" value="Select Flight"></label>
  </form>
</body>

</html>